<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/acitivity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/acitivity_vertical_margin"
    tools:context="zimmermann.larissa.jsonexample.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Coloque o a unidade de medida:"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edittext_unidade_entrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exemplo: km" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Coloque o a unidade de medida:"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edittext_valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exemplo: 34" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Coloque o a unidade que vocÃª deseja obter:"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edittext_unidade_saida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exemplo: m" />

    <Button
        android:id="@+id/button_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:text="Enviar"
        android:textColor="@android:color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/textview_valorconverter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textview_unidadeconverter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" = "
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textview_valorconvertido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34000"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textview_unidadeconvertida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"
            android:textSize="18dp" />


    </LinearLayout>

</LinearLayout>
